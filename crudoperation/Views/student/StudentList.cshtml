@model List<crudoperation.Context.studentinfo>
@{
    ViewBag.Title = "StudentList";
}

<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>FName</th>
        <th>Email</th>
        <th>mobile</th>
        <th>Description</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.FName</td>
            <td>@item.Email</td>
            <td>@item.Mobile</td>
            <td>@item.Description</td>
            <td>
                <a href="@Url.Action("Student",new {item.ID,item.Name,item.FName,item.Mobile,item.Description })" class=" btn btn-success">Edit</a>
                <a href="@Url.Action("Delete",new {item.ID })" class=" btn btn-danger">Delete</a>

            </td>

        </tr>
    }
</table>